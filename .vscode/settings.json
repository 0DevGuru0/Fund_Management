{
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabCompletion": "on",
  "editor.wordWrapColumn": 90,
  "editor.rulers": [
    90
  ],
  "vscode-graphql.useSchemaFileDefinitions": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "files.exclude": {
    "packages-cache": true,
    "**/node_modules": true,
    "**/.idea": true,
    "**/.next": false
  },
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.associations": {
    "Dockerfile-prod": "dockerfile",
    "Dockerfile-dev": "dockerfile",
    ".dockerignore": "ignore",
    ".postcssrc": "json",
    "tsconfig.*.json": "jsonc"
  },
  "vsicons.associations.files": [
    {
      "icon": "docker2",
      "filename": true,
      "extensionsGlob": [
        "yml"
      ],
      "filenamesGlob": [
        "docker-compose",
        "docker-compose.override",
        "docker-compose.local",
        "docker-compose.base",
        "docker-compose.nightly",
        "docker-compose.qa",
        "docker-compose.insiders",
        "docker-compose.production",
        "docker-compose.seed"
      ]
    },
    {
      "icon": "tsconfig",
      "filename": true,
      "extensionsGlob": [
        "json"
      ],
      "filenamesGlob": [
        "tsconfig.base",
        "tsconfig.front"
      ]
    },
    {
      "icon": "jest",
      "filename": true,
      "extensionsGlob": [
        "js"
      ],
      "filenamesGlob": [
        "jest-e2e.config",
        "jest.config.integration"
      ]
    },
    {
      "icon": "test",
      "extensions": [
        "e2e-test.ts"
      ]
    },
    {
      "icon": "style",
      "extensions": [
        "jss.ts"
      ]
    }
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.cache": true,
    "**/dist": true,
    "**/build": true,
    "**/storybook-build": true,
    "**/.next": true
  },
  "emmet.excludeLanguages": [
    "markdown",
    "typescriptreact"
  ],
  // disable default vscode formatters and use prettier instead
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": false
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql"
  ],
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[graphql]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.snippetSuggestions": "bottom"
  },
  "git.ignoreLimitWarning": true,
  "cSpell.words": [
    "camunda",
    "chooseable",
    "Formio",
    "Funder",
    "jotai",
    "openapi",
    "orcid",
    "Orcid",
    "prefetch",
    "pubnito",
    "RESTAPI",
    "Urql"
  ]
}
